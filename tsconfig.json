{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "types": ["@citizenfx/client", "@citizenfx/server", "node"],
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
